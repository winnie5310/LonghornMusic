@model LonghornMusic.ViewModels.SongCreateViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Song</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SongID)

        <div class="form-group col-md-8">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-8">
            <div class="col-md-2">
                <label class="control-label">Artist</label>
            </div>
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.SelectedArtist, (SelectList)ViewBag.AllArtists, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Artist, "", new { @class = "text-danger" })
            </div>
        </div>
        

        <div class="form-group col-md-8">
            <div class="col-md-2">
                <label class="control-label">Genres</label>
            </div>
            <div class="col-md-6">
                @Html.ListBoxFor(model => model.SelectedGenres, (MultiSelectList)ViewBag.AllGenres, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SongGenres, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
